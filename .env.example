# =============================================================================
# Tourcube Guide Portal - Environment Variables
# =============================================================================

# Session Configuration (REQUIRED)
# Generate a secure key with: python3 -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your_secret_key_here_generate_with_secrets_token_urlsafe_32
SESSION_COOKIE_NAME=guide_portal_session
SESSION_MAX_AGE=86400

# Company Configuration (Optional - has defaults)
# Default company code and mode used when accessing root URL
# These values are fallback defaults when user accesses without parameters
COMPANY_CODE=WTGUIDE
MODE=Test

# API Configuration Path (Optional - has default)
# Path to the JSON file containing API keys for all companies
API_KEY_JSON_PATH=./config/apikey.json

# Application Settings (Optional - has defaults)
DEBUG=false
APP_NAME=Tourcube Guide Portal
APP_VERSION=1.0.0

# Server Configuration (Optional - has defaults)
HOST=0.0.0.0
PORT=8000
RELOAD=false

# Security (Optional - has default)
SSL_VERIFY=true
ALLOWED_ORIGINS=[]  # JSON list, e.g., ["https://guideportal.azurewebsites.net"]

# =============================================================================
# IMPORTANT NOTES:
# =============================================================================
# - API URLs and Keys are configured per-company in config/apikey.json
# - The old API_BASE_URL and API_KEY variables are NO LONGER USED
# - Each company has Test and Production credentials in apikey.json
# - SECRET_KEY is the only REQUIRED variable for production
# =============================================================================
